pipeline {
    agent any

    stages {
        stage('Docker') {
            steps {
                sh "sudo docker build -t jilu407/aravind-app:$BUILD_NUMBER ."
            }
        }
        stage('Docker clean') {
            steps {
                sh "sudo sh -c 'docker rmi $(sudo docker images -f "dangling=true" -q)'"
            }
        }
    }
}
